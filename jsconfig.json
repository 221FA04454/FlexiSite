{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@ui/*": [
                "src/components/ui/*"
            ],
            "@layouts/*": [
                "src/layouts/*"
            ],
            "@screens/*": [
                "src/screens/*"
            ],
            "@hooks/*": [
                "src/hooks/*"
            ],
            "@context/*": [
                "src/context/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@services/*": [
                "src/services/*"
            ],
            "@assets/*": [
                "src/assets/*"
            ],
            "@styles/*": [
                "src/styles/*"
            ],
            "@config/*": [
                "src/config/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}